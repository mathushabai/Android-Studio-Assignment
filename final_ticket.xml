<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bookText"
        android:layout_width="251dp"
        android:layout_height="57dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="Booking Succesful!"
        android:textColor="#0A610D"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="302dp"
        android:layout_height="109dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Screenshot to save the ticket above and show them to our receptionists at our physical counters to make your payment"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/ticketHolder"
        android:layout_width="346dp"
        android:layout_height="338dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookText" />

    <TextView
        android:id="@+id/seat"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="208dp"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/seatText"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/seatText"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="208dp"
        android:gravity="center"
        android:text="Seat"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ticketHolder"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/date"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="148dp"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/dateText"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="Date"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ticketHolder"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/movie"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="88dp"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/movieText"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/movieText"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:text="Movie"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ticketHolder"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/location"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="28dp"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/locationText"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Location"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ticketHolder"
        app:layout_constraintTop_toTopOf="@+id/ticketHolder" />

    <TextView
        android:id="@+id/bookedBy"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:text="Booked by; User"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ticketHolder"
        app:layout_constraintEnd_toEndOf="@+id/ticketHolder"
        app:layout_constraintStart_toStartOf="@+id/ticketHolder" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="192dp"
        android:layout_height="61dp"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="#8E9DF3"
        android:text="Return Home"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

</androidx.constraintlayout.widget.ConstraintLayout>