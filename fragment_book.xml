<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/booking_bg"
    tools:context=".ui.booking.BookingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <TextView
            android:id="@+id/bookHeading"
            android:layout_width="361dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="500dp"
            android:background="#422575"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Movie Ticket Booking"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/locSpin"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:background="@android:drawable/spinner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mapIcon"
            app:layout_constraintTop_toBottomOf="@+id/bookHeading" />

        <ImageView
            android:id="@+id/mapIcon"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="80dp"
            android:src="@android:drawable/ic_dialog_map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookHeading" />

        <Spinner
            android:id="@+id/movieSpin"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:background="@android:drawable/spinner_dropdown_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/locSpin" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="68dp"
            android:src="@android:drawable/presence_video_away"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapIcon" />

        <TextView
            android:id="@+id/dateHolder"
            android:layout_width="455dp"
            android:layout_height="89dp"
            android:layout_marginTop="102dp"
            android:background="#0D1C6E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieSpin" />

        <TextView
            android:id="@+id/date3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#0D1C6E"
            android:clickable="true"
            android:gravity="center"
            android:text="date3"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/dateHolder"
            app:layout_constraintStart_toEndOf="@+id/date2"
            app:layout_constraintTop_toTopOf="@+id/dateHolder"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/date1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#0D1C6E"
            android:clickable="true"
            android:gravity="center"
            android:text="date1"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/dateHolder"
            app:layout_constraintStart_toStartOf="@+id/dateHolder"
            app:layout_constraintTop_toTopOf="@+id/dateHolder"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/date5"
            android:layout_width="91dp"
            android:layout_height="88dp"
            android:background="#0D1C6E"
            android:clickable="true"
            android:gravity="center"
            android:text="date5"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/dateHolder"
            app:layout_constraintStart_toEndOf="@+id/date4"
            app:layout_constraintTop_toTopOf="@+id/dateHolder"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/date4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#0D1C6E"
            android:clickable="true"
            android:gravity="center"
            android:text="date4"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/dateHolder"
            app:layout_constraintStart_toEndOf="@+id/date3"
            app:layout_constraintTop_toTopOf="@+id/date3"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#0D1C6E"
            android:clickable="true"
            android:gravity="center"
            android:text="date2"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/dateHolder"
            app:layout_constraintStart_toEndOf="@+id/date1"
            app:layout_constraintTop_toTopOf="@+id/dateHolder"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="177dp"
            android:layout_height="63dp"
            android:layout_marginStart="163dp"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="147dp"
            android:layout_marginRight="147dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/start_btn"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateHolder"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>